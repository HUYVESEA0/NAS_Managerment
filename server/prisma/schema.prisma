// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  roleId    Int
  role      Role     @relation(fields: [roleId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  permissions String   // JSON string of permissions e.g., ["READ_FLOOR", "WRITE_FILE"]
  users       User[]
}

model Floor {
  id          Int      @id @default(autoincrement())
  name        String
  level       Int      @unique
  description String?
  rooms       Room[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Room {
  id          Int       @id @default(autoincrement())
  name        String
  floorId     Int
  floor       Floor     @relation(fields: [floorId], references: [id])
  machines    Machine[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Machine {
  id          Int          @id @default(autoincrement())
  name        String
  ipAddress   String?
  username    String?      // SSH Username
  password    String?      // SSH Password (Encrypted in real app)
  port        Int          @default(22)
  status      String       @default("offline") // online, offline, maintenance
  roomId      Int
  room        Room         @relation(fields: [roomId], references: [id])
  mountPoints MountPoint[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

// Representing a shared folder or simulated volume on a machine
model MountPoint {
  id        Int      @id @default(autoincrement())
  name      String
  path      String   // Path to directory (simulated or real)
  machineId Int
  machine   Machine  @relation(fields: [machineId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
